check process <%= fetch(:unicorn_name) %> with pidfile <%= fetch(:unicorn_pid) %>
  start program = "/etc/init.d/<%= fetch(:unicorn_name) %> start"
  stop program = "/etc/init.d/<%= fetch(:unicorn_name) %> stop"

<% fetch(:unicorn_workers).times do |n| %>
  <% pid = fetch(:unicorn_pid).sub(".pid", ".#{n}.pid") %>
  check process <%= fetch(:unicorn_name)%>_worker_<%= n %> with pidfile <%= pid %>
    start program = "/bin/true"
    stop program = "/usr/bin/test -s <%= pid %> && /bin/kill -QUIT `cat <%= pid %>`"
    if mem > 200.0 MB for 1 cycles then restart
    if cpu > 50% for 3 cycles then restart
    if 5 restarts within 5 cycles then timeout
    if changed pid 2 times within 60 cycles then alert
<% end %>